rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // HELPER FUNCTIONS
    // ============================================
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function currentUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Check if user belongs to a specific tenant
    function isTenantMember(tenantId) {
      return isAuthenticated() && currentUserData().tenantId == tenantId;
    }

    function hasRole(role) {
      return isAuthenticated() && currentUserData().rol == role;
    }

    function isAdmin() {
      return hasRole('Admin');
    }

    function isInstructor() {
      return hasRole('Admin') || hasRole('Editor') || hasRole('Asistente');
    }

    // ============================================
    // USERS COLLECTION
    // ============================================
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow update: if isAuthenticated() && request.auth.uid == userId && 
                       !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'tenantId']);
      allow create, delete: if isAdmin();
    }

    // ============================================
    // STUDENTS COLLECTION
    // ============================================
    match /students/{studentId} {
      allow read: if isInstructor() && isTenantMember(resource.data.tenantId);
      allow create: if isInstructor() && isTenantMember(request.resource.data.tenantId);
      allow update: if isInstructor() && isTenantMember(resource.data.tenantId) && isTenantMember(request.resource.data.tenantId);
      allow delete: if isAdmin() && isTenantMember(resource.data.tenantId);
    }

    // ============================================
    // MISIONES KICHO (CENSO)
    // ============================================
    match /misiones_kicho/{misionId} {
      allow read: if isInstructor() && isTenantMember(resource.data.tenantId);
      // Public read for the Kicho Mission (limited fields ideally, but for now allow read if active)
      allow read: if resource.data.activa == true; 
      allow create, update: if isInstructor() && isTenantMember(request.resource.data.tenantId);
      allow delete: if isAdmin() && isTenantMember(resource.data.tenantId);
    }

    // ============================================
    // REGISTROS TEMPORALES (PÃšBLICO + ADMIN)
    // ============================================
    match /registros_temporales/{regId} {
      // Public can create (for inscriptions and censo)
      allow create: if true; 
      // User can read their own registration if they have the ID (Smart Link)
      allow read: if true; 
      // Admin/Instructors can manage their tenant's records
      allow read, update: if isInstructor() && isTenantMember(resource.data.tenantId);
      allow delete: if isAdmin() && isTenantMember(resource.data.tenantId);
    }

    // ============================================
    // FINANZAS
    // ============================================
    match /finanzas/{movId} {
      allow read, create, update: if isInstructor() && isTenantMember(request.resource.data.tenantId || resource.data.tenantId);
      allow delete: if isAdmin() && isTenantMember(resource.data.tenantId);
    }

    // ============================================
    // SOLICITUDES COMPRA (TIENDA)
    // ============================================
    match /solicitudesCompra/{solId} {
      allow create: if true; // Public can request (from store)
      allow read, update: if isInstructor() && isTenantMember(resource.data.tenantId);
      allow delete: if isAdmin() && isTenantMember(resource.data.tenantId);
    }

    // ============================================
    // IMPLEMENTOS (TIENDA CATALOG)
    // ============================================
    match /implementos/{impId} {
      allow read: if true; // Public catalog
      allow write: if isAdmin();
    }

    // ============================================
    // ASISTENCIA
    // ============================================
    match /asistencia/{asistId} {
      allow read, create, update: if isInstructor();
      allow delete: if isAdmin();
    }

    // ============================================
    // SEDES / OTROS
    // ============================================
    match /sedes/{sedeId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /settings/{settingId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // ============================================
    // DEFAULT: Deny all other access
    // ============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
